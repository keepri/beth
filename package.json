{
  "type": "module",
  "version": "0.1.0",
  "name": "tickets",
  "author": "KIPRI",
  "module": "main.ts",
  "scripts": {
    "dev": "concurrently \"bun db:dev\" \"bun tw:dev\" \"bun --watch main.ts\" \"bun db:studio\"",
    "build": "bun build.ts",
    "start": "bun ./dist/src/index.js",
    "db:dev": "turso dev -f ./src/db/data/db.sqlite",
    "db:check": "drizzle-kit check:sqlite --config drizzle.config.cjs",
    "db:push": "bun db:check && drizzle-kit push:sqlite --config drizzle.config.cjs",
    "db:studio": "drizzle-kit studio --config drizzle.config.cjs",
    "tw": "tailwindcss -i static/main.css -o static/styles.css --minify --config tailwind.config.cjs",
    "tw:dev": "tailwindcss -i static/main.css -o static/styles.css --watch --config tailwind.config.cjs",
    "typecheck": "bunx --bun tsc",
    "format": "prettier . --write",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.9",
    "eslint": "^8.56.0",
    "eslint-plugin-jsdoc": "^48.0.2",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.0",
    "typescript": "5.3.3"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "^0.0.14",
    "@elysiajs/bearer": "^0.8.0",
    "@elysiajs/cors": "^0.8.0",
    "@elysiajs/cron": "^0.8.0",
    "@elysiajs/html": "^0.8.0",
    "@elysiajs/static": "^0.8.1",
    "@kitajs/ts-html-plugin": "^1.3.3",
    "@libsql/client": "^0.4.0-pre.5",
    "@t3-oss/env-core": "^0.7.1",
    "drizzle-orm": "^0.29.2",
    "elysia": "^0.8.5",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  }
}
