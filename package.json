{
  "type": "module",
  "module": "ESNext",
  "version": "0.2.0",
  "name": "beth",
  "author": "KIPRI",
  "scripts": {
    "dev": "concurrently \"bun db:studio\" \"bun tw:dev\" \"bun --watch main.ts\" \"bun js:dev\"",
    "make": "bun scripts/build/build.ts",
    "start": "bun .out/main.js",
    "db:dev": "turso dev -f src/db/data/db.sqlite",
    "db:check": "drizzle-kit check",
    "db:push": "bun db:check && drizzle-kit push",
    "db:drop": "drizzle-kit drop",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "js:dev": "bun scripts/build/build-js.ts",
    "tw": "tailwindcss -i static/main.css -o static/styles.css --minify",
    "tw:dev": "tailwindcss -i static/main.css -o static/styles.css --watch",
    "format": "prettier --write . | grep -v '\\(unchanged\\)' || echo \"No files changed\"",
    "lint": "eslint . && bunx --bun tsc --project tsconfig.lint.json",
    "clean": "rm -fr .out node_modules static/bundle.min.js static/styles.css"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/bun": "latest",
    "@types/eslint": "^8.56.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "bun-plugin-solid": "^1.0.0",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.24.2",
    "eslint": "^8.57.1",
    "eslint-plugin-jsdoc": "^48.11.0",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "^0.1.4",
    "@elysiajs/bearer": "^1.1.2",
    "@elysiajs/cors": "^1.1.1",
    "@elysiajs/cron": "^1.1.1",
    "@elysiajs/html": "^1.1.1",
    "@elysiajs/static": "^1.1.1",
    "@libsql/client": "^0.4.3",
    "@lucia-auth/adapter-drizzle": "^1.1.0",
    "@t3-oss/env-core": "^0.8.0",
    "arctic": "^1.9.2",
    "clsx": "^2.1.1",
    "correlation-id": "^5.2.0",
    "drizzle-orm": "^0.33.0",
    "elysia": "^1.1.21",
    "error-stack-parser": "^2.1.4",
    "lucia": "^3.2.1",
    "oslo": "^1.2.1",
    "pino-pretty": "^10.3.1",
    "solid-element": "^1.9.0",
    "solid-js": "^1.9.2",
    "zod": "^3.23.8"
  }
}
